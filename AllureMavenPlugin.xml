<build>
    <plugins>
        <plugin>
            <groupId>io.qameta.allure</groupId>
            <artifactId>allure-maven</artifactId>
            <version>2.29.1</version> <!-- Latest version available -->
            <executions>
                <execution>
                    <goals>
                        <goal>serve</goal> <!-- Generate and view reports locally -->
                        <goal>generate</goal> <!-- Generate report -->
                    </goals>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>
